<UserControl x:Class="Flowchart.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flowchart"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:NodeNotDraggedConverter x:Key="NodeNotDraggedConverter"/>
    </UserControl.Resources>
    <UserControl.Opacity>
        <MultiBinding Converter="{StaticResource NodeNotDraggedConverter}" >
            <Binding RelativeSource="{RelativeSource Self}" Mode="OneTime"/>
            <Binding Path="Diagram.DraggedNode" Mode="OneWay" />
        </MultiBinding>
    </UserControl.Opacity>
    <Border x:Name="Root" BorderBrush="AliceBlue" BorderThickness="1" CornerRadius="5" Margin="2">
        <Border x:Name="Anchor"
                Visibility="{Binding IsDraggable, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"
                CornerRadius="8"
                Width="16"
                Height="16"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Black"
                Margin="8"
                PreviewMouseMove="Anchor_PreviewMouseMove"/>
    </Border>
</UserControl>
