<UserControl x:Class="Flowchart.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:Flowchart"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="200">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:NodeNotDraggedToOpacityConverter x:Key="DraggedToOpacity"/>
        <local:ColorBrightnessConverter x:Key="ColorBrightnessConverter"/>
        <system:Double x:Key="BorderColorFactor">0.5</system:Double>
    </UserControl.Resources>
    <UserControl.Opacity>
        <MultiBinding Converter="{StaticResource DraggedToOpacity}" >
            <Binding RelativeSource="{RelativeSource Self}" Mode="OneTime"/>
            <Binding Path="Diagram.DraggedNode" Mode="OneWay" />
        </MultiBinding>
    </UserControl.Opacity>
    <Border x:Name="Root"
            BorderThickness="2"
            CornerRadius="5"
            Margin="2">
        <Border.BorderBrush>
            <MultiBinding Converter="{StaticResource ColorBrightnessConverter}">
                <Binding Path="BackgroundColor" Mode="OneWay"/>
                <Binding Source="{StaticResource BorderColorFactor}"/>
            </MultiBinding>
        </Border.BorderBrush>
        <Border.Effect>
            <DropShadowEffect Opacity="0.5"/>
        </Border.Effect>
        <Border x:Name="Anchor"
                CornerRadius="8"
                Width="16"
                Height="16"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Black"
                Margin="8"
                PreviewMouseMove="Anchor_PreviewMouseMove"/>
    </Border>
</UserControl>
