<Window x:Class="Flowchart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flowchart"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <local:Diagram Width="1000"
                       Height="1000"
                       x:Name="RootDiagram"
                       Rows="6"
                       Columns="6"
                       NodeMargin="8"
                       Padding="{Binding NodeMargin}">
            <local:Node NodeColor="LightGreen"
                            Column="0"
                            Row="0"
                            RowSpan="3"/>
            <local:Node NodeColor="LightCoral"
                            Column="1"
                            Row="1"
                            ColumnSpan="2"/>
            <local:Node NodeColor="SkyBlue"
                            Column="2" 
                            Row="3" 
                            ColumnSpan="2" 
                            RowSpan="2"/>
        </local:Diagram>
    </Grid>
</Window>
